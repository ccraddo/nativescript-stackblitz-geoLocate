<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
    <ActionBar title="Location Tap" icon="" />

    <StackLayout class="space-y-4 space-x-2">
        <Label text="Please tap me" class="text-3xl text-center" />
        <Button text="TAP" tap="{{ onTap }}" class="-primary" />
        <Label text=" ... " class="text-xl"/>
        <Label text="{{ lat }}" class="text-5xl text-center bg-yellow-500 text-black " textWrap="false" />
        <Label text="{{ lng }}" class="text-5xl text-center bg-yellow-500 text-black " textWrap="false" />
        <Label text="{{ alt }}" class="text-5xl text-center bg-yellow-500 text-black " textWrap="false" />
    </StackLayout>
</Page>
